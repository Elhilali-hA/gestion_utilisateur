<!doctype html>
<html lang="en">
  <head>
    <title>departements</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  </head>
  <body>

    <div class="p-4 m-auto text-center">
        <h1 class="text-primary">departements :</h1>
        
        <div class="d-flex justify-content-around">
          <a href="/"> <- go to home</a>
          <a href="/users">go to users -> </a>
        </div>
    </div>
    <div class="col-md-10 m-auto text-center">
        <table class=" mt-3 table table-striped">
          <thead class="thead-dark">

            <tr>
                <th class="thead-light">
                    #
                </th>
                <th class="thead-light">
                  Title
              </th>
              <th class="thead-light">
                  description
              </th>
              <th class="thead-light">
                update
            </th>
            <th class="thead-light">
              delete
          </th>
            </tr>
          </thead>
          <tbody>
            <% depart.forEach(function(departs) { %>
           
            <tr>
              <td>
                
              </td>
                <td>
                  <%= departs.title %>
                </td>
                <td>
                  <%= departs.description %>
                </td>
                <td>
                  <button type="button" class="btn btn-success" data-toggle="modal" data-target="#Modal<%= departs.id %>">
                    update user
                  </button>
                  <div class="modal fade" id="Modal<%= departs.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                        <div class="modal-body">
                          <form action="/depart/:<%= departs.id %>" method="post">
                            <div class="d-flex flex-column justify-content-center">
                              
                            <input type="hidden" value="<%=  departs.id %>" class="mt-2" placeholder="id" name="id">
                            <input type="text" value="<%= departs.title %>" class="mt-2" placeholder="title" name="title">
                            <input type="text" value="<%= departs.description %>" class="mt-2" placeholder="description" name="description">
                          </div>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                          <input type="submit" class="btn btn-primary" placeholder="Save changes">
                        </div>
                      </form>
                      </div> 
                    </div>
                  </div>
                 </td>
                 <td>           
                     <a href="/depart/<%=departs.id %>" class="btn btn-danger">delete  department</a>
                 </td>
            </tr>
            <% }) %>
          </tbody>
            
        </table>
    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>